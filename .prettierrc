{
  "arrowParens": "always",
  "printWidth": 80,
  "singleQuote": true,
  "jsxSingleQuote": false,
  "semi": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "plugins": ["@prettier/plugin-php"],
  "overrides": [
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "plugins": ["@prettier/plugin-php"],
        "tabWidth": 4,
        "trailingComma": "none",
        "printWidth": 80
      }
    }
  ]
}
